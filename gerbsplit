cat $1  | awk '
   BEGIN {
      layer = 0
   }
   /^G04 LAYER/ {
      layer = $3
      next;
   }
   // {
      T[layer]=T[layer] $0 "\n"
      next;
   }
   END {
      for(x in T) {
	 file = "gerbplot.gb" x
	 command = "rm -f " file
	 system(command)
	 if (x != 0 && x != 999) {
	     print T[0] > file
	     print T[x] >> file
	     print T[999] >>file
	 }
      }
   }
'

